{
  "Logging": {
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "ColorBehavior": "Enabled",
        "SingleLine": false,
        "TimestampFormat": "HH:mm:ss ",
        "UseUtcTimestamp": true,
        "IncludeScopes": true
      }
    },
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "Microsoft.AspNetCore.Http.Connections": "Debug",
      "YourNamespace": "Debug"
    }
  },
  "AllowedHosts": "*"
}
